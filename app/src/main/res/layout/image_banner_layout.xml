<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/image_banner_dialog_id" android:orientation="vertical" android:background="#80000000" android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/footer" android:layout_width="fill_parent" android:layout_height="wrap_content" android:weightSum="2.0" android:layout_alignParentBottom="true">
        <LinearLayout android:id="@+id/playImageBannerLL" android:layout_gravity="left" android:layout_marginLeft="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0">
            <Button
                android:textSize="28.0dp"
                android:layout_marginTop="10.0dp"
                android:id="@+id/adsPlayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dp"
                android:text="Play"
                android:layout_weight="1.0" />
        </LinearLayout>
        <LinearLayout android:id="@+id/closeImageBannerLL" android:layout_gravity="right" android:layout_marginLeft="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0">
            <Button
                android:textSize="28.0dp"
                android:layout_marginTop="10.0dp"
                android:id="@+id/adsCloseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dp"
                android:text="Close"
                android:layout_weight="1.0" />
        </LinearLayout>
        <LinearLayout android:layout_gravity="right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:weightSum="10.0" android:layout_weight="1.0">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="9.0" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout android:gravity="top" android:id="@+id/cap" android:paddingTop="10dp" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:weightSum="10.0" android:layout_weight="1.0">
            <TextView android:gravity="center_horizontal" android:visibility="visible" android:id="@+id/adsImageTitleId" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Our game" android:layout_alignParentTop="true" android:textColor="@color/white" />
            <TextView android:gravity="center_horizontal" android:visibility="gone" android:id="@+id/dialog_pointsTV" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="App descr" android:layout_alignParentTop="true" android:textColor="@color/white"/>
            <TextView android:gravity="center_horizontal" android:visibility="gone" android:id="@+id/dialog_wordTV" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="WORD" android:layout_alignParentTop="true" android:layout_marginTop="50dp" android:textStyle="bold" android:textColor="@color/white" />
            <ImageView
                android:id="@+id/adsImageId"
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@drawable/ic_fw"/>
            <FrameLayout
                android:visibility="gone"
                android:id="@+id/promo_frag"
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp">
                <include layout="@layout/rec_apps_layout"/>
            </FrameLayout>
        </LinearLayout>
        <RelativeLayout android:id="@+id/myOffers" android:padding="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content">
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:layout_alignParentLeft="true"
        android:layout_weight="1.0"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:weightSum="10.0" >
        <Button
            android:id="@+id/rateAppButton"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10.0dp"
            android:layout_marginBottom="10.0dp"
            android:layout_weight="1.0"
            android:text="Rate App"
            android:textSize="28.0dp" />
    </LinearLayout>

</RelativeLayout>